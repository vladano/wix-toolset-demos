				<RegistryValue Root="HKCU" 
							   Key="Software\$(var.Manufacturer)\$(var.ProductName)\DesktopShortcut"
							   Name="installed" 
							   Type="integer" 
							   Value="1" KeyPath="yes" />

			</Component>

